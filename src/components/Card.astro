---
export interface Props {
	title: string;
	colSpan?: string;
}

const { title, colSpan } = Astro.props;

const colSpanString = colSpan ? 'lg:col-span-' + colSpan : '';
console.log(colSpanString)
const gridSizes: any = {
    1: 'lg:col-span-1',
	2: 'lg:col-span-2',
	3: 'lg:col-span-3',
	4: 'lg:col-span-4',
	5: 'lg:col-span-5',
	6: 'lg:col-span-6',
	7: 'lg:col-span-7',
	
}

---
<div class={`bg-slate-100 dark:bg-white dark:bg-opacity-90 rounded text-slate-800 p-3 ${gridSizes[colSpan]}`}>
	<h3 class="font-bold">{title}</h3>
	<hr class="border-slate-400 border-dashed my-2" />
	<slot />
</div>